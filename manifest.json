{
    "manifest_version": 3,
    "name": "Flight Scraper",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.jpeg",
        "32": "icons/icon32.jpeg",
        "48": "icons/icon48.jpeg",
        "128": "icons/icon128.jpeg"
      }
    },
    "content_scripts": [
    {
      "matches": ["*://*.kiwi.com/*", "*://kiwi.com/*", "*://www.azair.eu/*"],
      "js": ["content.js", "utility.js"]
    }
    ],
    "icons": {
      "16": "icons/icon16.jpeg",
      "32": "icons/icon32.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
}
